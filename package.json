{
  "name": "pediatric-drug-calculator",
  "version": "1.0.0",
  "description": "Pediatric Medication Dose Calculator - Always Available Emergency Reference",
  "main": "./src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "medical",
    "pediatric",
    "calculator",
    "emergency",
    "always-on"
  ],
  "author": "Yazen_lol",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^22.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "electron-auto-launch": "^5.0.7",
    "electron-updater": "^5.0.0",
    "html2canvas": "^1.4.1",
    "is-elevated": "^4.0.0",
    "mathjs": "^15.0.0"
  },
  "build": {
    "appId": "com.medical.pediatriccalculator",
    "productName": "Pediatric Drug Calculator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asarUnpack": [
      "node_modules/electron-auto-launch/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"  
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pediatric Drug Calculator",
      "runAfterFinish": true,
      "perMachine": false,                     
      "allowElevation": true                   
    }
  }
}
